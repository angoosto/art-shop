// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema
generator client {
  provider        = "prisma-client-js"
}

datasource db {
  provider             = "postgresql"
  url                  = env("POSTGRES_PRISMA_URL")
  relationMode         = "prisma"
}

model Piece {
  id           String    @id @default(cuid())
  title        String    @unique
  year         DateTime
  description  String
  height       Float
  width        Float
  price        Float
}
